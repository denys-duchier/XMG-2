%type Stmts Stmts
%type Stmt Stmt
%type AStmt AStmt
%type MaybeIFace MaybeIface
%type Call Call
%type Dot Dot
%type Var Var 
%type EqPart EqPart

%ext DimStmt DimStmt
%ext IFace IFace

%token id 

%%

Stmts : Stmt {$$=$1}
      | Stmt ';' Stmts {$$=and($1,$3)} 
      | Stmt '|' Stmts {$$=or($1,$3)}; 

Stmt : AStmt MaybeIFace {$$=stmt($1,$2)};

MaybeIFace : '*=' IFace {$$=some($2)}
	   | {$$=none};

AStmt : '{' Stmts '}' {$$=$1} 
      | '(' Stmts ')' {$$=$1}
      | DimStmt       {$$=$1}
      | EqPart '=' EqPart {$$=eq($1,$3)}
      | Call {$$=$1};

Dot : Var '.' Var {$$=dot($1,$3)};

Call : id '[' (id // ',')* ']' {$$=call($1,$3)} ;


Var : id {$$=$1} 
    | '?' id {$$=$2};

EqPart : Var {$$=$1}
       | Dot {$$=$1} 
       | Call{$$=$1};

%%
